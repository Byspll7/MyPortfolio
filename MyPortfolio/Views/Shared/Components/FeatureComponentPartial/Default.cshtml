@model List<MyPortfolio.DAL.Entites.Feature>

<section id="home" class="s-home page-hero target-section" data-parallax="scroll" data-image-src="https://i.hizliresim.com/ddt0xyd.jpg" data-natural-width=3000 data-natural-height=2000 data-position-y=center>

    <div class="overlay"></div>
    <div class="shadow-overlay"></div>

    @foreach (var item in Model)
    {
        <div class="home-content">

            <div class="row home-content__main">

                <h3>@item.Title</h3>

                <h1>
                    @* I am Amin. <br>
                    I have been working as a Developer for 3 years <br> *@
                    @item.Description
                </h1>

                <div class="home-content__buttons">
                    <a href="#works" class="smoothscroll btn btn--stroke">
                        Last Projects
                    </a>
                    <a href="#about" class="smoothscroll btn btn--stroke">
                        About Me
                    </a>
                </div>

                <div class="home-content__scroll">
                    <a href="#about" class="scroll-link smoothscroll">
                        <span>Down</span>
                    </a>
                </div>

            </div>

        </div>
    }
     

    <ul class="home-social">
        <li>
            <a href="#"><i class="im im-facebook" aria-hidden="true"></i><span>Facebook</span></a>
        </li>
        <li>
            <a href="#"><i class="im im-twitter" aria-hidden="true"></i><span>Twiiter</span></a>
        </li>
        <li>
            <a href="#"><i class="im im-instagram" aria-hidden="true"></i><span>Instagram</span></a>
        </li>
        <li>
            <a href="#"><i class="im im-behance" aria-hidden="true"></i><span>Behance</span></a>
        </li>
        <li>
            <a href="#"><i class="im im-pinterest" aria-hidden="true"></i><span>Pinterest</span></a>
        </li>
    </ul>
    <!-- end home-social -->

</section>
